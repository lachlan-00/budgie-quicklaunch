<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="budgie-quicklaunch">
  <schema id="org.lachlandewaard.budgie-quicklaunch">

    <key type="s" name="folder-path">
      <default>'/usr/bin'</default>
      <summary>Folder Path</summary>
      <description>Folder path of executable files</description>
    </key>

    <key type='i' name='root-x'>
      <summary>X position on your screen</summary>
      <description>Used to monitor your last position</description>
      <default>100</default>
      <range min='-10000' max='10000'/>
    </key>

    <key type='i' name='root-y'>
      <summary>Y position on your screen</summary>
      <description>Used to monitor your last position</description>
      <default>100</default>
      <range min='-10000' max='10000'/>
    </key>

    <key type='i' name='width'>
      <summary>Width of the launcher window</summary>
      <description>Used to monitor your window size</description>
      <default>200</default>
      <range min='100' max='10000'/>
    </key>

    <key type='i' name='height'>
      <summary>Height of the launcher window</summary>
      <description>Used to monitor your window size</description>
      <default>600</default>
      <range min='100' max='10000'/>
    </key>
    <key type="b" name="lock-switch">
      <default>false</default>
      <summary>Lock window</summary>
      <description>Lock the quick launch size and position</description>
    </key>
  </schema>
</schemalist>
